{% extends 'admin/layouts/base.twig' %}
{% block css %}
<link rel="stylesheet" href="/assets/admin/css/select2.min.css">
<link rel="stylesheet" href="/assets/admin/css/bootstrap3-wysihtml5.min.css">
{% endblock %}
{% block javascript %}
<script src="/assets/admin/js/select2.min.js"></script>
<script src="/assets/admin/js/bootstrap3-wysihtml5.all.min.js"></script>
<script>
$(document).ready(function() {
    $('.category-select').select2();
    $('.textarea').wysihtml5();
});
</script>
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{title}}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="/admin/brand/index">{{subtitle}}</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-warning">
            <div class="box-header with-border">
              <h3 class="box-title">Edit {{subtitle}}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <form role="form" action="" method="post" enctype="multipart/form-data">
                <!-- text input -->
                <div class="form-group">
                  <label>Title</label>
                  <input type="text" class="form-control" name="title" value="{{post.title}}">
                </div>
                <!-- text input -->
                <div class="form-group">
                  <label>Summary</label>
                  <input type="text" class="form-control" name="summary" value="{{post.summary}}">
                </div>

                <!-- text input -->
                <div class="form-group">
                  <label>Description</label>
                  <textarea class="textarea form-control" name="description">{{post.description}}</textarea>
                </div>

                <!-- text input -->
                <div class="form-group">
                  <label>Quote</label>
                  <input type="text" class="form-control" name="quote" value="{{post.quote}}">
                </div>

                <!-- text input -->
                <div class="form-group">
                  <label>Photo</label>
                  <input type="file" class="form-control" name="image">
                  <img class="img-fluid" src="{{post.photo}}" alt="Image" height="125">
                  <a href="javascript:alert('Bạn muốn xóa ảnh này?')"><i class="fa fa-fw fa-close"></i></a>
                </div>

                <!-- text input -->
                <div class="form-group">
                  <label>Tag</label>
                  <input type="text" class="form-control" name="tags" value="{{post.tags}}">
                </div>

                <!-- text input -->
                <div class="form-group">
                  <label>Category</label>
                  <select class="category-select form-control" name="category">
                  {% for category in categories %}
                    <option value="{{category.id}}" {% if post_post_cat_id == category.id %}selected{% endif %}
                    >{{category.title}}</option>
                  {% endfor %}
                  </select>
                </div>

                <div class="form-group">
                  <label>Status</label>
                  <select class="category-select form-control" name="status">
                    <option value="active">ACTIVE</option>
                    <option value="inactive">INACTIVE</option>
                  </select>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>

              </form>
            </div>
            <!-- /.box-body -->
          </div>
        </div>
      </div>
    </section>
{% endblock %}