{% extends 'admin/layouts/base.twig' %}
{% block css %}
<link rel="stylesheet" href="{{ base_url() }}assets/admin/css/dataTables.bootstrap.min.css">
{% endblock %}
{% block javascript %}
<script src="{{ base_url() }}assets/admin/js/jquery.dataTables.min.js"></script>
<script src="{{ base_url() }}assets/admin/js/dataTables.bootstrap.min.js"></script>
<script>
  $(function () {
    $('#example1').DataTable()
  })
</script>
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{title}}
        <small>advanced tables</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{url('admin')}}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">{{subtitle}}</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
        <div class="box">
        	<div class="box-header">
        		<div class="box-title">Thêm {{subtitle}}</div>
        	</div>
        	<div class="box-body">
        		<a href="{{url('admin/product/create')}}" class="btn btn-primary">Thêm {{subtitle}}</a>
        		<button class="btn btn-danger">Xóa {{subtitle}}</button>
        	</div>
        </div>
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">{{title}}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>id</th>
                  <th>title</th>
                  <th>slug</th>
                  <th>category_id</th>
                  <th>regular_price</th>
                  <th>quantity</th>
                  <th>primary_image</th>
                  <th>brand_id</th>
                  <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                  <tr>
                    <td>{{product.id}}</td>
                    <td>{{product.title}}</td>
                    <td>{{product.slug}}</td>
                    <td>{{product.category_id}}</td>
                    <td>{{product.regular_price}}</td>
                    <td>{{product.quantity}}</td>
                    <td>{{product.primary_image}}</td>
                    <td>{{product.brand_id}}</td>
                    <td>
                      <a href="" class="btn btn-primary btn-xs">Xem</a>
                      <a href="" class="btn btn-warning btn-xs">Sửa</a>
                      <a href="" class="btn btn-danger btn-xs">Xóa</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}