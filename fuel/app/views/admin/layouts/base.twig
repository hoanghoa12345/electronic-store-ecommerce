<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Electronic Store | {{ title }}</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  
  {{ asset_add_path('assets/admin/css/','css') }}
  {{ asset_css('pace.min.css') }}
  <!-- Bootstrap 3.3.7 -->
  {{ asset_css('bootstrap.min.css') }}
  <!-- Font Awesome -->
  {{ asset_css('font-awesome.min.css') }}
  <!-- Ionicons -->
  {{ asset_css('ionicons.min.css') }}
  <!-- Theme style -->
  {{ asset_css('AdminLTE.min.css') }}
  
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  {{ asset_css('_all-skins.min.css') }}
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans:300,400,600,700,300italic,400italic,600italic">

{% block css %}{% endblock %}
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
{% include 'admin/layouts/header.twig' %}
{% include 'admin/layouts/aside.twig' %}
<div class="content-wrapper">
{% if session_get_flash('success') %}
<div class="alert alert-success alert-dismissible">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  <h4><i class="icon fa fa-check"></i> Thành công!</h4>
  {{ session_get_flash('success') }}
</div>
{% endif %}
{% if session_get_flash('error') %}
<div class="alert alert-danger alert-dismissible">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  <h4><i class="icon fa fa-ban"></i> Có lỗi!</h4>
  {{ session_get_flash('error') }}
</div>
{% endif %}
{% block content %}{% endblock %}
</div>
{% include "admin/layouts/footer.twig" %}
</div>
<!-- ./wrapper -->
{{ asset_add_path('assets/admin/js/','js') }}
<!-- jQuery 3 -->
{{ asset_js('jquery.min.js') }}
{{ asset_js('pace.min.js') }}
<!-- jQuery UI 1.11.4 -->
{{ asset_js('jquery-ui.min.js') }}
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<!-- Bootstrap 3.3.7 -->
{{ asset_js('bootstrap.min.js') }}
<!-- AdminLTE App -->
{{ asset_js('adminlte.min.js') }}
<!-- Slimscroll -->
{{ asset_js('jquery.slimscroll.min.js') }}
<!-- FastClick -->
{{ asset_js('fastclick.js') }}
<!-- AdminLTE for demo purposes -->
{{ asset_js('demo.js') }}
{% block javascript %}{% endblock %}
</body>
</html>