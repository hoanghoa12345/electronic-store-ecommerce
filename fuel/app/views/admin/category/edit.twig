{% extends 'admin/layouts/base.twig' %}
{% block css %}

{% endblock %}
{% block javascript %}
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Quản lý danh mục
        <small>advanced tables</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="/admin/category/index">Danh mục</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <div class="box-title">Category</div>
          </div>
          <div class="box-body">
            <button class="btn btn-primary">Thêm category</button>
            <button class="btn btn-danger">Xóa category</button>
            <form action="{{ url("admin/category/edit/") }}{{id}}" method="post">
              <div class="form-group">
                <label for="category_name">Tên category *</label>
                <input type="text" class="form-control" name="category_name" id="category_name" placeholder="Nhập category name" value="{{ cat_name }}" required>
              </div>
              <button type="submit" class="btn btn-primary">Update</button>
            </form>
          </div>
        </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}