<div role="tabpanel" class="tab-pane active" id="grid" aria-expanded="true">

	<ul class="products columns-4">
		{% for product in products %}
			<li class="product">
				<div class="product-outer">
					<div class="product-inner">
						<span class="loop-product-categories">
							<a href="product-category.html" rel="tag">{{product.category.name}}</a>
						</span>
						<a href="{{url('p/'~product.slug)}}">
							<h3>{{product.title}}</h3>
							<div class="product-thumbnail">
								<img data-echo="{{product.primary_image}}" src="assets/images/blank.gif" alt="">
							</div>
						</a>

						<div class="price-add-to-cart">
							<span class="price">
								<span class="electro-price">
									<ins>
										<span class="amount">{{vndFormater(product.discounted_price)}}</span>
									</ins>
									<del>
										<span class="amount">{{vndFormater(product.regular_price)}}</span>
									</del>
								</span>
							</span>
							<a rel="nofollow" href="single-product.html" class="button add_to_cart_button">Add to cart</a>
						</div>
						<!-- /.price-add-to-cart -->

						<div class="hover-area">
							<div class="action-buttons">
								<a href="#" rel="nofollow" class="add_to_wishlist">Wishlist</a>
								<a href="#" class="add-to-compare-link">Compare</a>
							</div>
						</div>
					</div>
					<!-- /.product-inner -->
				</div>
				<!-- /.product-outer -->
			</li>
		{% endfor %}
	</ul>
</div>
